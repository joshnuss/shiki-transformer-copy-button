{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": false,
		"noImplicitAny": true,
		"declaration": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"moduleResolution": "bundler",
		"lib": ["DOM", "ESNext"],
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"]
}
